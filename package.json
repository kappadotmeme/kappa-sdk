{
  "name": "kappa-create",
  "version": "2.1.2",
  "description": "Complete SDK and React components for creating and trading tokens on Sui with Kappa Protocol. Includes customizable DeployerWidget and TradeWidget with theming support.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "require": "./dist/server.js",
      "import": "./dist/server.js"
    },
    "./react": {
      "require": "./dist/react/index.js",
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    }
  },
  "files": [
    "dist",
    "kappa.js",
    "kappa-trade.js",
    "math.js",
    "move-bytecode",
    "scripts",
    "README.md",
    "docs"
  ],
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "dependencies": {
    "@mysten/bcs": "^1.7.0",
    "@mysten/sui": "^1.36.0",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "@mysten/dapp-kit": "^0.17.4",
    "@tanstack/react-query": "^5.45.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.57.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "@tanstack/react-query": ">=5",
    "@mysten/dapp-kit": ">=0.17.0"
  },
  "scripts": {
    "start": "node -e \"console.log('kappa-sdk: library only')\"",
    "lint": "eslint .",
    "test": "node --test",
    "build:wasm": "node scripts/bundle-wasm.js",
    "build:react": "node scripts/build-react.js",
    "build": "npm run build:wasm && npm run build:react",
    "prepublishOnly": "npm run build && npm run lint && npm test"
  },
  "keywords": [
    "sui",
    "blockchain",
    "token",
    "bonding-curve",
    "kappa",
    "sdk",
    "react",
    "widget",
    "deployer",
    "defi",
    "web3",
    "dapp"
  ],
  "author": "Kappa Protocol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kappa-labs/kappa-sdk"
  },
  "bugs": {
    "url": "https://github.com/kappa-labs/kappa-sdk/issues"
  },
  "homepage": "https://kappa.meme"
}
